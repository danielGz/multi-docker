{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "dannx/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "dannx/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "dannx/multi-worker",            
            "essential": false
        },
        {
            "name": "nginx",
            "image": "dannx/multi-nginx",            
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client","server"]
        }
    ]
}